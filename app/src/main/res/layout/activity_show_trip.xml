<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.samar.easytripplannerproject.ShowTripActivity">

    <TextView
        android:id="@+id/tripNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="53dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tripDateTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tripNameTxt"
        android:layout_alignStart="@+id/tripNameTxt"
        android:layout_below="@+id/tripNameTxt"
        android:layout_marginTop="62dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tripFromxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tripDateTxt"
        android:layout_alignStart="@+id/tripDateTxt"
        android:layout_below="@+id/tripDateTxt"
        android:layout_marginTop="39dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tripToTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tripFromxt"
        android:layout_marginEnd="95dp"
        android:layout_marginRight="95dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tripNoteTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tripFromxt"
        android:layout_alignStart="@+id/tripFromxt"
        android:layout_below="@+id/tripFromxt"
        android:layout_marginTop="48dp"
        android:text="TextView" />

    <Button
        android:id="@+id/startTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tripNoteTxt"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tripNoteTxt"
        android:layout_marginBottom="69dp"
        android:text="@string/starttrip_str" />

    <Button
        android:id="@+id/EditTripBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/startTrip"
        android:layout_alignBottom="@+id/startTrip"
        android:layout_alignLeft="@+id/tripToTxt"
        android:layout_alignStart="@+id/tripToTxt"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:text="@string/Edit_trip_str" />

    <TextView
        android:id="@+id/tripStatusTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tripNoteTxt"
        android:layout_alignStart="@+id/tripNoteTxt"
        android:layout_below="@+id/tripNoteTxt"
        android:layout_marginTop="31dp"
        android:text="TextView" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/startTrip"
        android:layout_alignEnd="@+id/startTrip"
        android:layout_alignRight="@+id/startTrip"
        android:layout_marginBottom="17dp"
        android:text="Done" />


</RelativeLayout>
